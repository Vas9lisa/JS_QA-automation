function myFirstApp(name, age) {
    alert(`–ü—Ä–∏–≤–µ—Ç, –º–µ–Ω—è –∑–æ–≤—É—Ç ${name} –∏ —ç—Ç–æ –º–æ—è –ø–µ—Ä–≤–∞—è –ø—Ä–æ–≥—Ä–∞–º–º–∞`)

    function showSkills(){
        let skills = ["—É–º–Ω–µ–Ω—å–∫–∞—è", "–∫—Ä–∞—Å–∏–≤–µ–Ω—å–∫–∞—è", "—Ö–æ—Ö–æ—Ç—É—à–∫–∞"];
             for (let i = 0; i < skills.length; i++) {
              console.log(`–Ø —Ö–æ—Ä–æ—à–µ–Ω—å–∫–∞—è, –ø–æ—Ç–æ–º—É —á—Ç–æ: ` + skills + "!");
}
    }

    function checkAge(age){
        if(age<18){  
            console.log("–ê —Ç—ã –∞–∫—Ç–∏–≤–Ω—ã–π –º–∞–ª—ã–π!");
        } else {
            console.log(`–í—Ä–µ–º—è –ø–æ–∫–æ—Ä—è—Ç—å –ú–∏—Ä, ${name}!`);
        }
    }
  
    function calcPow(num){
     console.log(`–ü–æ–ª–µ–∑–Ω–æ–µ –∑–Ω–∞–Ω–∏–µ! –ï—Å–ª–∏ ${num} —É–º–Ω–æ–∂–∏—Ç—å —Å–∞–º–æ –Ω–∞ —Å–µ–±—è, —Ç–æ –≤ –æ—Ç–≤–µ—Ç–µ –ø–æ–ª—É—á–∏—Ç—Å—è ` + num * num)
    }

    showSkills();
    checkAge(age);
    (calcPow(6))

}

myFirstApp("Mary", 22);
