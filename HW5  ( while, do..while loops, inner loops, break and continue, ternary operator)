let pir = ""
let x = 5
let space = " "
for (let i = 1; i <= x; i++) {
  let cew = i
   for(let j = 1; j <= i; j++) {
    pir += cew + space
    cew = cew + (x - j)
   }
   pir += "\n"
}
console.log(pir)
