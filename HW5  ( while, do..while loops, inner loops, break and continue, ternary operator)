let fig = ""
space = " "
x = 10
for(let i = 1; i <= x; i++){
  fig += space.repeat(x - i)
for(let j = 1; j <= i; j++) {
  if(j == 10){
    fig +=0
  }
  else fig += j
  }
for (let j = i - 1; j >= 1; j--) {
  fig += j
 }
  fig += "\n"
}
 x = 9
 for(let i = 1; i <= x; i++) {
   fig += space.repeat(i)
 for(let j = 1; j <= x + 1 - i; j++) {
   fig += j
  }
  for(let j = x - i; j >= 1; j--) {
   fig += j
   }
   fig += "\n"
   }
   console.log(fig)


‚úÖ2) –ù–∞—Ä–∏—Å—É–π—Ç–µ –µ–ª–æ—á–∫—É
