Loop while
while (condition){
  code block
}

let fruits = ['apple', 'pears', 'plums', 'grape']
let x = 0
while(x < fruits.length) {
console.log(fruits[x])
x++  }

Loop while
do while
do {
 code block
} while (condition)

let k
do {
console.log(k)
k++
} while (k > 3)



